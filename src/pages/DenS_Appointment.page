                  reRender="tPanel">
                  <apex:commandButton id="saveB" action="{!save}" value="Set appointment"/>
               </apex:commandLink>
            </apex:pageBlockSection>
         </apex:pageBlock>
         <apex:outputPanel id="tPanel">
            <apex:pageMessages />
         </apex:outputPanel>
